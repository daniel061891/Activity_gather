<%- include('includes/head.ejs') %>
    <body>
        <%- include('includes/header.ejs') %>
            <main>
                <div class="container">
                    <div class="login_register_wrap p-4">
                        <h1 class="text-center mb-4">忘記密碼</h1>
                        <h5 class="text-center mb-2">輸入您的電子郵件地址以接收重置連結</h5>
                        <form action="/forget-password" method="POST">
                            <div class="mb-3">
                                <label for="email" class="form-label">信箱</label>
                                <input type="email" class="form-control" name="email" id="email" placeholder="請輸入電子郵件" required>
                            </div>
                            <% if(showErr) { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= errMsg %>
                                </div>
                            <% } %>
                            <div class="btn_wrap">
                                <button type="submit" class="btn btn-danger all_btns">發送電子郵件</button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
        <%- include('includes/footer.ejs') %>
    </body>
</html>