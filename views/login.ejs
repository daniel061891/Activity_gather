<%- include('includes/head.ejs') %>
    <body>
        <%- include('includes/header.ejs') %>
            <main>
                <div class="container">
                    <div class="login_register_wrap p-4">
                        <h1 class="text-center mb-4">會員登入</h1>
                        <form action="/login" method="POST">
                            <div class="mb-3">
                                <label for="email" class="form-label">信箱</label>
                                <input type="email" class="form-control" name="email" id="email" value="daniel061891@gmail.com" placeholder="name@example.com" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">密碼</label>
                                <input type="password" class="form-control" name="password" id="password" value="1" required>
                                <a href="/forget-password">忘記密碼?</a>
                            </div>
                            <% if(showErr) { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= errMsg %>
                                </div>
                            <% } %>
                            <div class="btn_wrap">
                                <button type="submit" class="btn btn-danger all_btns">登入</button>
                            </div>
                            <div class="goRegister my-2">
                                <span>還沒有帳號嗎?</span>
                                <a href="/register">前往註冊</a>
                            </div>
                        </form>
                        <div class="google_login_wrap py-3 mt-1">
                            <a href="/auth/google">
                                <div class="google_login mt-2 p-2 text-center">
                                    <!-- <i class="fa-brands fa-google me-2"></i> -->
                                    <img src="img/google.png" alt="" class="me-2">
                                    Google 登入
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </main>
        <%- include('includes/footer.ejs') %>
    </body>
</html>